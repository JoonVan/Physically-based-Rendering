{

	"camera": {
		"eye": {
			"x": 0.0,
			"y": 1.0,
			"z": 3.0
		},
		// Doesn't really mean anything, since it gets
		// overwritten with the first mouse movement
		// so ... TODO
		"center": {
			"x": 0.0,
			"y": 0.0,
			"z": 0.0
		},
		// Step distance
		"speed": 0.25
	},

	// Default model import path for the Qt File Dialog
	"import_path": "/home/seba/programming/Physically-based Rendering/resources/models/",

	"lights": {
		"default_position": {
			"x": 0.2,
			"y": 1.2,
			"z": 0.4
		}
	},

	"logging": true,

	"opencl": {
		"program": "source/pathtracing.cl",
		// Squares only, so this setting is for width and height together
		"workgroupsize": 512
	},

	"render": {
		// AA through jittering
		"antialiasing": true,
		// Number of times a light ray bounces
		"bounces": 2,
		// Render interval in [ms] (16.666 ms ~ 60 FPS)
		"interval": 100.0,
		// Camera perspective
		"perspective": {
			"fov": 50.0,
			"zfar": 100.0,
			"znear": 0.1
		}
	},

	"shader": {
		"name": "pathtracing",
		"path": "source/shader/"
	},

	"window": {
		"height": 512,
		"title": "Physically-based Renderer",
		"width": 512
	}

}
