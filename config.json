{

	"camera": {
		"eye": {
			"x": 0.0,
			"y": 1.0,
			"z": 3.0
		},
		// Doesn't really mean anything, since it gets
		// overwritten with the first mouse movement
		// so ... TODO
		"center": {
			"x": 0.0,
			"y": 0.0,
			"z": 0.0
		},
		// Perspective
		"perspective": {
			"fov": 50.0,
			"zfar": 100.0,
			"znear": 0.1
		},
		// Step distance
		"speed": 0.25
	},

	// Default model import path for the Qt File Dialog
	"import_path": "/home/seba/programming/Physically-based Rendering/resources/models/",

	// Concerning contents of the information window
	"info": {
		// Update the displayed execution times for each kernel.
		// Set to 0 to disable updates. [ms]
		"kernel_times": 250.0
	},

	"kdtree": {
		// Maximum depth of leaf nodes. Set a positive, non-negative value or:
		// -1 - round( log2( #vertices ) )
		//  0 - no limit
		"depth": 0,
		// Minimum of faces per leaf node.
		// However, 1 split is minimum and will occur regardless
		"min_faces": 3,
		"optimize_ropes": true
	},

	"logging": {
		// 0 - no logging
		// 1 - errors and warnings
		// 2 - also info
		// 3 - also debug
		// 4 - extra verbose (additional debug messages)
		"level": 3
	},

	"opencl": {
		// Build options to try:
		// -cl-fast-relaxed-math
		// -cl-mad-enable
		// -cl-single-precision-constant
		// -cl-strict-aliasing
		// -cl-unsafe-math-optimizations
		"build_options": "",
		// Check each executed OpenCL function for encountered errors.
		// (Disabling doesn't show any performance improvements.)
		"check_errors": true,
		// Path to the main CL source file.
		"program": "source/opencl/pathtracing.cl",
		// Squares only, so this setting is for width and height together.
		// Value has to be 2^n for optimization reasons.
		"workgroupsize": 256
	},

	"render": {
		// AA through jittering.
		"antialiasing": false,
		// Backface culling (don't render backsides).
		// Can boost performance, but in some rare cases may
		// introduce rendering errors.
		"backface_culling": false,
		// Render interval in [ms] (16.666 ms ~ 60 FPS).
		"interval": 100.0,
		// Extend the path if a reflective or transparent surface is hit
		"max_added_depth": 2,
		// Maximum path length
		"max_depth": 3,
		// Samples of paths per frame
		"samples": 1
	},

	"shader": {
		"name": "pathtracing",
		"path": "source/shader/"
	},

	"spectral": {
		// 0: NTSC
		// 1: EBU
		// 2: SMPTE
		// 3: HDTV
		// 4: CIE (default)
		// 5: Rec709
		"color_system": 4
	},

	"window": {
		"height": 600,
		"width": 800
	}

}
